<Window x:Class="ADO_Demo.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADO_Demo.App"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    
    <StackPanel>
        <ListView ItemsSource="{Binding Users}">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Id}">ID</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding FirstName}">Имя</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding LastName}">Фамилия</GridViewColumn> 
                    <GridViewColumn DisplayMemberBinding="{Binding Role}">Роль</GridViewColumn>   
                    <GridViewColumn DisplayMemberBinding="{Binding Email}">Email</GridViewColumn>                      
                </GridView>
            </ListView.View>
        </ListView>
    </StackPanel>
</Window>
